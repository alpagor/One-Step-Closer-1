<div>
    <h1>{{challenge.name}}</h1>

    <img src="{{challenge.image}}" alt="">

    <p>{{challenge.description}}</p>

</div>

{{#unless challengeIsTaken }}

<form action="/challenge/{{challenge._id}}/accept" method="post">
    <button type="submit">Take it!</button>
</form>

{{/unless}}

<a href="/users/{{challenge._id}}/edit">

    <button type="submit">Edit your challenge</button>

</a>

<form action="/users/{{challenge._id}}/delete" method="post">
    <!-- Button trigger modal -->
    <button type="submit" class="btn btn-primary" data-toggle="modal" id="myBtn">
        Delete your challenge
    </button>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <h4 class="modal-title">Modal Header</h4>
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Woohoo, you're deleting this challenge! Are you sure?!
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Delete</button>
                </div>
            </div>
        </div>
    </div>

</form>



<script>
    $(document).ready(function () {
        $("#myBtn").click(function () {
            $("#myModal").modal();
        });
    });
</script>
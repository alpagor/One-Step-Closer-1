<div>
    <h1>{{challenge.name}}</h1>

    <img src="{{challenge.image}}" alt="">

    <p>{{challenge.description}}</p>

</div>

{{#unless challengeIsTaken }}

<form action="/challenge/{{challenge._id}}/accept" method="post">
    <button type="submit">Take it!</button>
</form>

{{/unless}}

<a href="/users/{{challenge._id}}/edit">

    <button type="submit">Edit your challenge</button>

</a>

<form action="/users/{{challenge._id}}/delete" method="post">
    <button type="submit">Delete your challenge</button>

</form>
<form id="create" action="/users/{{challenge._id}}/edit" method="post" enctype="multipart/form-data">

    <div class="title">
        <label for="">Title</label>
        <input type="text" name="name" value="{{challenge.name}}">
    </div>


    <label class="file" for="">Image</label>
    <input type="file" id="myFile" name="image" value="{{challenge.image}}">

    <label for="">Description</label>
    <textarea wrap class="description" name="description" >{{challenge.description}}</textarea>
    <button class="submit-changes" type="submit">Submit changes</button>
</form>
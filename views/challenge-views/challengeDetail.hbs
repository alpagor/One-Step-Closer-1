<div>


    <h3>{{challenge.name}}</h3>
    <br>
    <img src='{{challenge.image}}' alt=" Challenge Image">
    <br>
    <p>{{challenge.description}}</p>
    <br>
    {{#if challenge.author}}
    <p>This challenge was created by {{author}}</p>
    {{/if}}

</div>

<div>


    {{#if challengeIsTaken}}

    <form action="/users/{{challenge._id}}/completed" method="post">

        <button type="submit">Complete</button>

    </form>

    <form action="/users/{{challenge._id}}/leave" method="post">

        <button type="submit">Give up challenge</button>

    </form>

    {{else}}

    <form action="/challenge/{{challenge._id}}/accept" method="post">

        <button type="submit">Take it!</button>

    </form>

    {{/if}}

</div>
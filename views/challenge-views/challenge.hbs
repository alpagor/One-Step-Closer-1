<script>
  $('#carouselExample').on('slide.bs.carousel', function (e) {

    var $e = $(e.relatedTarget); //returns which element being entered or exited on mouse movement.
    var idx = $e.index(); //Search for a given element from among the matched elements (the ones clicked)
    var itemsPerSlide = 3; // slides shown in bigger screen
    var totalItems = $('.carousel-item').length;

    if (idx >= totalItems - (itemsPerSlide - 1)) {
      var it = itemsPerSlide - (totalItems - idx);
      for (var i = 0; i < it; i++) {
        // append slides to end
        if (e.direction == "left") {
          $('.carousel-item').eq(i).appendTo('.carousel-inner');
        }
        else {
          $('.carousel-item').eq(0).appendTo('.carousel-inner');
        }
      }
    }
  });
</script>



